{
  "name": "jsxui",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --parallel --include-dependencies",
    "develop": "lerna run develop --parallel --include-dependencies",
    "babel": "yarn workspace @jsxui/babel-plugin",
    "editor": "yarn workspace @jsxui/editor",
    "react": "yarn workspace @jsxui/react",
    "site": "yarn workspace site"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "babel-jest": "^27.0.5",
    "babel-plugin-tester": "^10.1.0",
    "babel-test": "^0.2.4",
    "esbuild": "^0.12.11",
    "husky": "^6.0.0",
    "jest": "^27.0.5",
    "lerna": "^4.0.0",
    "npm-dts": "^1.3.9",
    "prettier": "^2.3.2",
    "typescript": "^4.3.4"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
